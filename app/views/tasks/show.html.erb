<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>Done: <%= @task.completed %></p>
<p><%= link_to 'Back to tasks list', tasks_path %></p>
<p><%= link_to 'Edit task', edit_task_path(@task) %></p>
<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
